<launch>
    <node pkg="coax_server"
          name="coax"
          type="coax_server"
	  output="screen"
          args="/dev/ttyUSB0">
      <remap from="/coax_server/state" to="/state"/>

      <remap from="/coax_server/control" to="/control"/>
      <remap from="/coax_server/rawcontrol" to="/rawcontrol"/>

      <remap from="/coax_server/reach_nav_state" to="/reach_nav_state"/>
      <remap from="/coax_server/configure_comm" to="/configure_comm"/>
			<remap from="/coax_server/configure_control" to="/configure_control"/>
      <remap from="/coax_server/set_timeout" to="/set_timeout"/>
    </node>


    <node pkg="coax_vision"
          name="CoaxVisionControl"
          type="CoaxVisionControl"
	  output="screen">
      <remap from="/coax_vision_control/state" to="/state"/>

      <remap from="/coax_vision_control/rawcontrol" to="/rawcontrol"/>

      <remap from="/coax_vision_control/reach_nav_state" to="/reach_nav_state"/>
      <remap from="/coax_vision_control/configure_comm" to="/configure_comm"/>
			<remap from="/coax_vision_control/configure_control" to="/configure_control"/>
      <remap from="/coax_vision_control/set_timeout" to="/set_timeout"/>

			<remap from="/coax_vision_control/set_nav_mode" to="/set_nav_mode"/>

      <param name="frequency" value="100"/>
<!--
      <rosparam file="$(find coax_vision_control)/config/coax_parameters.yaml"/>
      <rosparam file="$(find coax_vision_control)/config/coax_control_params.yaml"/>
-->
    </node>


</launch>
